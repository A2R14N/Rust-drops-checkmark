{
  "manifest_version": 3,
  "name": "Facepunch Drops â€” Manual Marker",
  "version": "1.1",
  "description": "Manually mark items as collected on twitch.facepunch.com and kick.facepunch.com drops pages and persist state using sync storage.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "https://twitch.facepunch.com/*",
        "https://kick.facepunch.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
